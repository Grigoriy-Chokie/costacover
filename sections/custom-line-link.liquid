<section class="line_link line_link-{{section.id}}" style="background-color: {{ section.settings.bg-color }};">
    <a href="{{ section.settings.url }}" class="line_link_wr">
        <div class="llw_link">
            <h2 style="color: {{ section.settings.color }};">
                {{ section.settings.title }}
            </h2>
        </div>
    </a>
</section>

<style>
    .line_link-{{section.id}} {
        margin-top: {{section.settings.margin-top}}px;
        margin-bottom: {{section.settings.margin-bottom}}px;
    }
    .line_link_wr {
        display: flex;
        width: 100%;
        height: 100%;
        justify-content: center;
        align-items: center;
        text-decoration: unset;
        padding: {{section.settings.padding-vertical}}px 20px;
    }
    .llw_link h2 {
        margin: unset;
        text-align: center;
        transition: all .5s ease-in-out;
    }
    .line_link_wr:hover h2 {
        transition: all .5s ease-in-out;
        transform: scale(1.1);
    }
    @media screen and (max-width: 768px) {
        .line_link-{{section.id}} {
            margin-top: {{section.settings.margin-top-mob}}px;
            margin-bottom: {{section.settings.margin-bottom-mob}}px;
        }    
    }
    .add {}
</style>

