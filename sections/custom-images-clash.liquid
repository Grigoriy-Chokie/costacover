    "name": "Images clash",
    "limit": 2,
    "settings": [
        {
            "type": "color",
            "id": "main-color",
            "label": "Section main color",
            "default": "#FFF"
        },
        {
            "type": "header",
            "content": "Desktop"
        },
        {
            "type": "range",
            "id": "margin-top",
            "label": "Margin-top",
            "unit": "px",
            "min": 0,
            "max": 100,
            "step": 1,
            "default": 75
        },
        {
            "type": "range",
            "id": "margin-bottom",
            "label": "Margin-bottom",
            "unit": "px",
            "min": 0,
            "max": 100,
            "step": 1,
            "default": 75
        },
        {
            "type": "header",
            "content": "Mobile"
        },
        {
            "type": "range",
            "id": "margin-top-mob",
            "label": "Margin-top",
            "unit": "px",
            "min": 0,
            "max": 100,
            "step": 1,
            "default": 40
        },
        {
            "type": "range",
            "id": "margin-bottom-mob",
            "label": "Margin-bottom",
            "unit": "px",
            "min": 0,
            "max": 100,
            "step": 1,
            "default": 40
        }
    ],
    "blocks": [
        {
            "name": "Clashed iamge",
            "type": "image",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "img",
                    "label": "Image"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title",
                    "default": "Wallpaper"
                },
                {
                    "type": "header",
                    "content": "Button"
                },
                {
                    "type": "text",
                    "id": "btn-text",
                    "label": "Button text",
                    "default": "Shop all"
                },
                {
                    "type": "url",
                    "id": "btn-url",
                    "label": "Button url"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "select",
            "name": "Clash the Images",
            "blocks": [
                {
                    "type": "image"
                },
                {
                    "type": "image"
                }
            ]
        }
    ]
}
{% endschema %}